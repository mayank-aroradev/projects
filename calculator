import art
print(art.logo)
def add(n1, n2):
    return n1 + n2
def subtract(n1,n2):
    return n1-n2
def multiply(n1,n2):
    return n1*n2
def divide(n1,n2):
    return n1/n2
operations={
    '+': add,
    '-': subtract,
    '*': multiply,
    '/': divide,
}
should_accumulate = True

num1=float(input("what is the first no?:"))
while should_accumulate:
    for symbol in operations:
        print(symbol)
    operation_symbol = input("pick an operation")
    num2=float(input("what is the second no?"))
    answer = operations[operation_symbol](num1, num2)
    print(f"{num1} {operation_symbol} {num2}= {answer}")
    choice = input(f"type 'y' to continue calculationg with {answer}, or type 'n' to start ")

    if choice =="y":
        num = answer
    else:
        should_accumulate = False
        print("Thank you for using calculator")


