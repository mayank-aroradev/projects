import time

def decorator_function(function):
    def wrapper_function():
        time.sleep(2)
        function()
        function()
    return wrapper_function
# first method 
@decorator_function
def say_hello():
    print("hello")

def say_greeting():
    print ("bye")



say_hello()
#second method
decofunc= decorator_function(say_greeting)
decofunc()